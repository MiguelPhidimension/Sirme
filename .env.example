# SIRME Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# Hasura Admin Secret for GraphQL API access
# Get this from your Hasura Console -> Settings -> Env vars
VITE_HASURA_ADMIN_SECRET=your_hasura_admin_secret_here

# GraphQL Endpoint
# Replace with your actual Hasura GraphQL endpoint
VITE_GRAPHQL_ENDPOINT=https://your-hasura-instance.hasura.app/v1/graphql

# Optional: For production user authentication
# VITE_HASURA_ACCESS_KEY=user_access_key
# VITE_HASURA_USER_ID=user_id
# VITE_HASURA_USER_ROLE=user_role

# Application Configuration
VITE_APP_NAME=SIRME
VITE_APP_VERSION=1.0.0

# Production/Development mode
NODE_ENV=production 